
<div id="error_explanation">
  <%= @comment.errors.full_messages.join(', ') %>
</div>

 <%= form_for [@post, @comment], remote: true do |f| %>
 <div class = "row">
  <div class="field form-group">
     <div class = "col-md-1">
     <%= f.label :body, class: 'control-label' %>
     </div>
     <div class = "col-md-4">
      <%= f.text_area :body, class: 'form-control' %>
     </div>
  </div>
</div>

 <div class = "row">
   <div class = "col-md-2">
   </div>
    <div class="actions form-group col-md-10">
      <div class="btn btn-primary center-align">
        <%= f.submit 'Comment' %>
      </div>
    </div>
  </div>
  <% end %>
