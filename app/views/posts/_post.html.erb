
<!-- Post partial, everything related to my post -->
<div class ="container-fluid">
<div id="<%= dom_id(@post) %>">
    <div class = "row">
      <div class = "col-md-12">
        <h2><%= @post.title %></h2>
      </div>
    </div>

    <div class = "row">
      <div class = "col-md-12">
        <h4><%= @post.category.title %></h4>
      </div>
    </div>

    <div class = "row">
      <div class = "col-md-2">
       <p>By: &nbsp<%= @post.user_full_name %></p>
      </div>
      <div class = "col-md-10">
        <%= @post.created_at.strftime("%d %b %Y") %>
      </div>
    </div>

    <div class = "row">
      <div class = "col-md-12">
        <section class = "star-widget">
          Rating: <%= average_star(@post) %>
        </section>
     </div>
    </div>

    <div class = "row">
      <div class = "col-md-12 post-body">
        <%= @post.body %>
      </div>
    </div>


    <div class = "row">
      <div class = "col-md-12">
      <% if can? :manage, @post  %>
        <%= link_to 'Edit', edit_post_path(@post),class: 'btn btn-primary' %>
        <%= link_to 'Delete', post_path(@post), method: :delete,
                                              data:{confirm: 'Are you sure you want to delete?'},class: 'btn btn-danger'  %>
      <% end %>

   <!-- favourites were here  -->
   <div class= "favourite-button">
     <%= render '/favourites/favourite', post: @post %>
   </div>

    
     </div>
    </div>
</div>

  <div class = "row">
  <div class = 'chosen-select col-md-12'>
    <button class = "tag-widget btn btn-default">
       Tags: <%= @post.tags.map(&:name).join(", ") %>
    </button>
  </div>
  </div>

  <div class = "row">
    <section class = "star-widget col-md-12">
      Rate this post: <%= display_star(@post) %>
    </section>
  </div>
</div>
